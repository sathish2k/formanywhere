---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "FormAnywhere | Build Powerful Forms That Work Offline",
  description = "Create multi-step forms, surveys, and questionnaires with drag-and-drop simplicity. Works offline, syncs when connected.",
} = Astro.props;

import "../styles/global.css";
import "@formanywhere/ui/styles/theme.css";
import "@formanywhere/ui/styles/glass.css";
import "@formanywhere/ui/styles/accessibility.css";
import "@formanywhere/ui/styles/typography.css";
import "@formanywhere/ui/styles/ripple.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- Preload critical font weights for faster rendering -->
    <link 
      rel="preload" 
      href="https://fonts.gstatic.com/s/inter/v18/UcC73FwrK3iLTeHuS_nVMrMxCp50SjIa2JL7.woff2" 
      as="font" 
      type="font/woff2" 
      crossorigin 
    />
    <!-- Non-blocking font loading with font-display: swap -->
    <style is:inline>
      @font-face {
        font-family: 'Inter';
        font-style: normal;
        font-weight: 400 800;
        font-display: swap;
        src: url(https://fonts.gstatic.com/s/inter/v18/UcC73FwrK3iLTeHuS_nVMrMxCp50SjIa2JL7.woff2) format('woff2');
        unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
      }
    </style>
    <title>{title}</title>
    <ViewTransitions />
    <!-- Theme initialization script - runs before page render to prevent flash -->
    <script is:inline>
      (function () {
        // Immediately apply saved theme to prevent flash
        function applyTheme() {
          const savedTheme = localStorage.getItem("formanywhere-theme") || "green";
          document.documentElement.setAttribute("data-theme", savedTheme);
        }
        
        // Apply on initial load
        applyTheme();
        
        // Re-apply after View Transitions swap content
        document.addEventListener("astro:after-swap", applyTheme);

        // Preserve dynamically injected component styles during View Transitions
        // UI components use runtime CSS injection with module-level flags that persist
        // across navigations, but the <style> tags get removed during page swap.
        document.addEventListener("astro:before-swap", function (e) {
          var injected = document.head.querySelectorAll(
            'style[data-md-button],' +
            'style[data-md-card],' +
            'style[data-md-chip],' +
            'style[data-md-checkbox],' +
            'style[data-md-dialog],' +
            'style[data-md-fab],' +
            'style[data-md-icon-button],' +
            'style[data-md-menu],' +
            'style[data-md-progress],' +
            'style[data-md-radio],' +
            'style[data-md-select],' +
            'style[data-md-snackbar],' +
            'style[data-md-switch],' +
            'style[data-md-tabs],' +
            'style[data-md-textfield]'
          );
          injected.forEach(function (style) {
            e.newDocument.head.appendChild(style.cloneNode(true));
          });
        });
      })();
    </script>
    <!-- Page Transition Loader Styles -->
    <style is:inline>
      /* Disable View Transition animations - instant page swap */
      ::view-transition-old(root),
      ::view-transition-new(root) {
        animation: none !important;
        mix-blend-mode: normal;
      }
      
      .page-loader {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        z-index: 9999;
        pointer-events: none;
        opacity: 0;
        transition: opacity 0.2s ease;
      }
      
      .page-loader.active {
        opacity: 1;
      }
      
      .page-loader__bar {
        position: absolute;
        top: 0;
        left: 0;
        width: 0;
        height: 100%;
        background: linear-gradient(
          90deg,
          transparent,
          var(--m3-color-primary, var(--color-primary, #00A76F)),
          var(--m3-color-primary, var(--color-primary, #00A76F))
        );
        box-shadow: 
          0 0 10px var(--m3-color-primary, var(--color-primary, #00A76F)),
          0 0 20px var(--m3-color-primary, var(--color-primary, #00A76F));
        border-radius: 0 2px 2px 0;
        transition: width 0.3s ease-out;
      }
      
      .page-loader.active .page-loader__bar {
        animation: loader-progress 0.8s ease-out forwards;
      }
      
      .page-loader.complete .page-loader__bar {
        width: 100% !important;
        animation: none;
        transition: width 0.15s ease-out, opacity 0.3s ease 0.1s;
      }
      
      .page-loader.complete {
        opacity: 0;
        transition: opacity 0.3s ease 0.2s;
      }
      
      @keyframes loader-progress {
        0% { width: 0; }
        20% { width: 25%; }
        50% { width: 60%; }
        80% { width: 85%; }
        100% { width: 90%; }
      }
    </style>
  </head>
  <body class="bg-background-default font-sans antialiased">
    <!-- Page Transition Loader -->
    <div class="page-loader" id="page-loader">
      <div class="page-loader__bar"></div>
    </div>
    
    <!-- Skip link for keyboard navigation (Accessibility: WCAG 2.4.1) -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <slot />
    
    <!-- Page Loader Script -->
    <script is:inline>
      (function() {
        const loader = document.getElementById('page-loader');
        
        // Show loader when navigation starts
        document.addEventListener('astro:before-preparation', function() {
          if (loader) {
            loader.classList.remove('complete');
            loader.classList.add('active');
          }
        });
        
        // Complete loader when new page is ready
        document.addEventListener('astro:after-swap', function() {
          if (loader) {
            loader.classList.add('complete');
            // Reset after animation completes
            setTimeout(function() {
              loader.classList.remove('active', 'complete');
            }, 500);
          }
        });
      })();
    </script>
  </body>
</html>
