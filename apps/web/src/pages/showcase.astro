---
import {
    Button,
    Card,
    Chip,
    Typography,
    Slider,
    DatePicker,
    TextField,
    Select,
    Checkbox,
    RadioGroup,
    Radio,
    Switch,
    CircularProgress,
    LinearProgress,
} from "@formanywhere/ui";
import BaseLayout from "../layouts/BaseLayout.astro";
import { TabsShowcase } from "../components/showcase/TabsShowcase";
import { IconButtonShowcase } from "../components/showcase/IconButtonShowcase";
import { NavigationShowcase } from "../components/showcase/NavigationShowcase";
---

<BaseLayout title="UI Showcase - FormAnywhere">
    <div
        class="min-h-screen bg-gradient-to-br from-surface via-surface-container to-surface-dim"
    >
        <!-- Hero Section -->
        <section class="section">
            <div class="container mx-auto px-6">
                <div class="text-center mb-16">
                    <Chip
                        variant="label"
                        label="Design System v1.0"
                        client:load
                    />
                    <Typography
                        variant="display-medium"
                        color="on-surface"
                        align="center"
                        client:load
                        class="mb-4"
                    >
                        UI Component Showcase
                    </Typography>
                    <Typography
                        variant="body-large"
                        color="on-surface-variant"
                        align="center"
                        client:load
                        class="max-w-2xl mx-auto"
                    >
                        Explore all components from the @formanywhere/ui design
                        system built with Liquid Glass Material 3 principles
                    </Typography>
                </div>
            </div>
        </section>

        <!-- Typography Section -->
        <section class="section" id="typography">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Typography
                    </Typography>

                    <!-- Display Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Display
                        </Typography>
                        <div class="space-y-4">
                            <Typography
                                variant="display-large"
                                color="on-surface"
                                client:load
                            >
                                Display Large - The quick brown fox
                            </Typography>
                            <Typography
                                variant="display-medium"
                                color="on-surface"
                                client:load
                            >
                                Display Medium - The quick brown fox
                            </Typography>
                            <Typography
                                variant="display-small"
                                color="on-surface"
                                client:load
                            >
                                Display Small - The quick brown fox
                            </Typography>
                        </div>
                    </div>

                    <!-- Headline Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Headlines
                        </Typography>
                        <div class="space-y-4">
                            <Typography
                                variant="headline-large"
                                color="on-surface"
                                client:load
                            >
                                Headline Large - The quick brown fox jumps
                            </Typography>
                            <Typography
                                variant="headline-medium"
                                color="on-surface"
                                client:load
                            >
                                Headline Medium - The quick brown fox jumps
                            </Typography>
                            <Typography
                                variant="headline-small"
                                color="on-surface"
                                client:load
                            >
                                Headline Small - The quick brown fox jumps over
                            </Typography>
                        </div>
                    </div>

                    <!-- Title Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Titles
                        </Typography>
                        <div class="space-y-4">
                            <Typography
                                variant="title-large"
                                color="on-surface"
                                client:load
                            >
                                Title Large - The quick brown fox jumps over the
                                lazy
                            </Typography>
                            <Typography
                                variant="title-medium"
                                color="on-surface"
                                client:load
                            >
                                Title Medium - The quick brown fox jumps over
                                the lazy dog
                            </Typography>
                            <Typography
                                variant="title-small"
                                color="on-surface"
                                client:load
                            >
                                Title Small - The quick brown fox jumps over the
                                lazy dog
                            </Typography>
                        </div>
                    </div>

                    <!-- Body Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Body
                        </Typography>
                        <div class="space-y-4">
                            <Typography
                                variant="body-large"
                                color="on-surface"
                                client:load
                            >
                                Body Large - The quick brown fox jumps over the
                                lazy dog. Pack my box with five dozen liquor
                                jugs.
                            </Typography>
                            <Typography
                                variant="body-medium"
                                color="on-surface"
                                client:load
                            >
                                Body Medium - The quick brown fox jumps over the
                                lazy dog. Pack my box with five dozen liquor
                                jugs. How vexingly quick daft zebras jump!
                            </Typography>
                            <Typography
                                variant="body-small"
                                color="on-surface"
                                client:load
                            >
                                Body Small - The quick brown fox jumps over the
                                lazy dog. Pack my box with five dozen liquor
                                jugs. How vexingly quick daft zebras jump! The
                                five boxing wizards jump quickly.
                            </Typography>
                        </div>
                    </div>

                    <!-- Colors -->
                    <div>
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Colors
                        </Typography>
                        <div
                            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"
                        >
                            <Typography
                                variant="body-large"
                                color="on-surface"
                                client:load
                            >
                                On Surface
                            </Typography>
                            <Typography
                                variant="body-large"
                                color="on-surface-variant"
                                client:load
                            >
                                On Surface Variant
                            </Typography>
                            <Typography
                                variant="body-large"
                                color="primary"
                                client:load
                            >
                                Primary
                            </Typography>
                            <Typography
                                variant="body-large"
                                color="secondary"
                                client:load
                            >
                                Secondary
                            </Typography>
                            <Typography
                                variant="body-large"
                                color="tertiary"
                                client:load
                            >
                                Tertiary
                            </Typography>
                            <Typography
                                variant="body-large"
                                color="error"
                                client:load
                            >
                                Error
                            </Typography>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Buttons Section -->
        <section class="section" id="buttons">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Buttons
                    </Typography>

                    <!-- Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Variants
                        </Typography>
                        <div class="flex flex-wrap gap-4">
                            <Button variant="filled" client:load
                                >Filled Button</Button
                            >
                            <Button variant="outlined" client:load
                                >Outlined Button</Button
                            >
                            <Button variant="text" client:load
                                >Text Button</Button
                            >
                            <Button variant="tonal" client:load
                                >Tonal Button</Button
                            >
                        </div>
                    </div>

                    <!-- Sizes -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Sizes
                        </Typography>
                        <div class="flex flex-wrap items-center gap-4">
                            <Button variant="filled" size="sm" client:load
                                >Small</Button
                            >
                            <Button variant="filled" size="md" client:load
                                >Medium</Button
                            >
                            <Button variant="filled" size="lg" client:load
                                >Large</Button
                            >
                        </div>
                    </div>

                    <!-- With Icons -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            With Icons
                        </Typography>
                        <div class="flex flex-wrap gap-4">
                            <Button variant="filled" client:load>
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M12 4v16m8-8H4"></path>
                                </svg>
                                Add Item
                            </Button>
                            <Button variant="outlined" client:load>
                                Download
                                <svg
                                    class="w-5 h-5"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                                    ></path>
                                </svg>
                            </Button>
                        </div>
                    </div>

                    <!-- States -->
                    <div>
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            States
                        </Typography>
                        <div class="flex flex-wrap gap-4">
                            <Button variant="filled" disabled client:load
                                >Disabled</Button
                            >
                            <Button variant="outlined" disabled client:load
                                >Disabled Outlined</Button
                            >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards Section -->
        <section class="section" id="cards">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Cards
                    </Typography>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Elevated Card -->
                        <Card variant="elevated" client:load>
                            <div class="p-6">
                                <Typography
                                    variant="title-large"
                                    color="on-surface"
                                    client:load
                                    class="mb-2"
                                >
                                    Elevated Card
                                </Typography>
                                <Typography
                                    variant="body-medium"
                                    color="on-surface-variant"
                                    client:load
                                    class="mb-4"
                                >
                                    This card has an elevated appearance with
                                    shadow and depth.
                                </Typography>
                                <Button variant="filled" size="sm" client:load
                                    >Action</Button
                                >
                            </div>
                        </Card>

                        <!-- Filled Card -->
                        <Card variant="filled" client:load>
                            <div class="p-6">
                                <Typography
                                    variant="title-large"
                                    color="on-surface"
                                    client:load
                                    class="mb-2"
                                >
                                    Filled Card
                                </Typography>
                                <Typography
                                    variant="body-medium"
                                    color="on-surface-variant"
                                    client:load
                                    class="mb-4"
                                >
                                    This card has a filled background with
                                    subtle elevation.
                                </Typography>
                                <Button variant="tonal" size="sm" client:load
                                    >Action</Button
                                >
                            </div>
                        </Card>

                        <!-- Outlined Card -->
                        <Card variant="outlined" client:load>
                            <div class="p-6">
                                <Typography
                                    variant="title-large"
                                    color="on-surface"
                                    client:load
                                    class="mb-2"
                                >
                                    Outlined Card
                                </Typography>
                                <Typography
                                    variant="body-medium"
                                    color="on-surface-variant"
                                    client:load
                                    class="mb-4"
                                >
                                    This card has a border outline with minimal
                                    elevation.
                                </Typography>
                                <Button variant="outlined" size="sm" client:load
                                    >Action</Button
                                >
                            </div>
                        </Card>
                    </div>
                </div>
            </div>
        </section>

        <!-- Chips Section -->
        <section class="section" id="chips">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Chips
                    </Typography>

                    <!-- Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Variants
                        </Typography>
                        <div class="flex flex-wrap gap-3">
                            <Chip label="Filled Chip" client:load />
                            <Chip label="Outlined Chip" client:load />
                        </div>
                    </div>

                    <!-- Selected State -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Selected State
                        </Typography>
                        <div class="flex flex-wrap gap-3">
                            <Chip label="Selected" selected client:load />
                            <Chip label="Not Selected" client:load />
                        </div>
                    </div>

                    <!-- With Icons -->
                    <div>
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Label Variant with Colors
                        </Typography>
                        <div class="flex flex-wrap gap-3">
                            <Chip
                                variant="label"
                                label="Primary Chip"
                                client:load
                            />
                            <Chip
                                variant="label"
                                color="secondary"
                                label="Secondary"
                                client:load
                            />
                            <Chip
                                variant="label"
                                color="info"
                                label="Info"
                                client:load
                            />
                            <Chip
                                variant="label"
                                color="success"
                                label="Success"
                                client:load
                            />
                            <Chip
                                variant="label"
                                color="warning"
                                label="Warning"
                                client:load
                            />
                            <Chip
                                variant="label"
                                color="error"
                                label="Error"
                                client:load
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Sliders Section -->
        <section class="section" id="sliders">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Sliders
                    </Typography>

                    <div class="space-y-8 max-w-md">
                        <div>
                            <Typography
                                variant="title-medium"
                                color="on-surface-variant"
                                client:load
                                class="mb-4"
                            >
                                Continuous
                            </Typography>
                            <Slider
                                client:load
                                defaultValue={30}
                                label="Volume"
                            />
                        </div>

                        <div>
                            <Typography
                                variant="title-medium"
                                color="on-surface-variant"
                                client:load
                                class="mb-4"
                            >
                                Discrete (Steps)
                            </Typography>
                            <Slider
                                client:load
                                min={0}
                                max={10}
                                step={1}
                                defaultValue={5}
                                label="Rating"
                                showValue
                            />
                        </div>

                        <div>
                            <Typography
                                variant="title-medium"
                                color="on-surface-variant"
                                client:load
                                class="mb-4"
                            >
                                Secondary Color
                            </Typography>
                            <Slider
                                client:load
                                color="secondary"
                                defaultValue={70}
                            />
                        </div>

                        <div>
                            <Typography
                                variant="title-medium"
                                color="on-surface-variant"
                                client:load
                                class="mb-4"
                            >
                                Disabled
                            </Typography>
                            <Slider
                                client:load
                                disabled
                                defaultValue={50}
                                label="Disabled"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Pickers Section -->
        <section class="section" id="pickers">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Pickers
                    </Typography>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            <Typography
                                variant="title-medium"
                                color="on-surface-variant"
                                client:load
                                class="mb-4"
                            >
                                Date Picker
                            </Typography>
                            <div class="space-y-4">
                                <DatePicker client:load label="Select Date" />
                                <DatePicker
                                    client:load
                                    label="With Value"
                                    value={new Date()}
                                />
                                <DatePicker
                                    client:load
                                    label="Disabled"
                                    disabled
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Text Fields Section -->
        <section class="section" id="textfields">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Text Fields
                    </Typography>

                    <!-- Variants -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Variants
                        </Typography>
                        <div
                            class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl"
                        >
                            <TextField
                                client:load
                                variant="filled"
                                label="Filled"
                                placeholder="Enter text"
                            />
                            <TextField
                                client:load
                                variant="outlined"
                                label="Outlined"
                                placeholder="Enter text"
                            />
                        </div>
                    </div>

                    <!-- Glass Variant -->
                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Glass Variant
                        </Typography>
                        <div
                            class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-2xl"
                        >
                            <TextField
                                client:load
                                variant="outlined"
                                label="Glass Outlined"
                                placeholder="Translucent field"
                                class="glass"
                            />
                            <TextField
                                client:load
                                variant="filled"
                                label="Glass Filled"
                                placeholder="Translucent field"
                                class="glass"
                            />
                        </div>
                    </div>

                    <!-- States -->
                    <div>
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            States
                        </Typography>
                        <div
                            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl"
                        >
                            <TextField
                                client:load
                                variant="outlined"
                                label="With Helper"
                                supportingText="Supporting text goes here"
                            />
                            <TextField
                                client:load
                                variant="outlined"
                                label="Error State"
                                error
                                errorText="This field is required"
                            />
                            <TextField
                                client:load
                                variant="outlined"
                                label="Disabled"
                                disabled
                                value="Cannot edit"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Select Section -->
        <section class="section" id="selects">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Select
                    </Typography>

                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-4xl"
                    >
                        <Select
                            client:load
                            label="Framework"
                            options={[
                                { value: "solid", label: "SolidJS" },
                                { value: "react", label: "React" },
                                { value: "vue", label: "Vue" },
                                { value: "svelte", label: "Svelte" },
                            ]}
                        />
                        <Select
                            client:load
                            label="Glass Select"
                            class="glass"
                            options={[
                                { value: "astro", label: "Astro" },
                                { value: "next", label: "Next.js" },
                                { value: "nuxt", label: "Nuxt" },
                            ]}
                        />
                        <Select
                            client:load
                            label="Disabled"
                            disabled
                            options={[{ value: "a", label: "Option A" }]}
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Checkboxes Section -->
        <section class="section" id="checkboxes">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Checkboxes
                    </Typography>

                    <div class="mb-8">
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            States
                        </Typography>
                        <div class="flex flex-wrap gap-6">
                            <Checkbox client:load label="Unchecked" />
                            <Checkbox
                                client:load
                                label="Checked"
                                defaultChecked
                            />
                            <Checkbox
                                client:load
                                label="Indeterminate"
                                indeterminate
                            />
                            <Checkbox client:load label="Error" error />
                            <Checkbox client:load label="Disabled" disabled />
                        </div>
                    </div>

                    <div>
                        <Typography
                            variant="title-medium"
                            color="on-surface-variant"
                            client:load
                            class="mb-4"
                        >
                            Glass Variant
                        </Typography>
                        <div class="flex flex-wrap gap-6">
                            <Checkbox client:load label="Glass" class="glass" />
                            <Checkbox
                                client:load
                                label="Glass Checked"
                                class="glass"
                                defaultChecked
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Radios Section -->
        <section class="section" id="radios">
            <div class="container mx-auto px-6">
                <div class="lg-glass-strong rounded-3xl p-8 mb-12">
                    <Typography
                        variant="headline-large"
                        color="on-surface"
                        client:load
                        class="mb-8"
                    >
                        Radio Buttons
                    </Typography>

                    <div
                        class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-2xl"
                    >
                        <div>
                            <Typography
                                variant="title-medium"
                                color="on-surface-variant"
                                client:load
                                class="mb-4"
                            >
                                Standard
                            </Typography>
                            <RadioGroup
                                client:load
                                name="demo"
                                defaultValue="solid"
                            >
                                <Radio value="solid" label="SolidJS" />
