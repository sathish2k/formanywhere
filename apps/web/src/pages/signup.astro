---
/**
 * Sign Up Page - Astro + SolidJS Hybrid
 * Branding panel (Astro static) + Form (SolidJS interactive)
 * Uses theme colors and UI components
 */
import BaseLayout from "../layouts/BaseLayout.astro";
import { SignUpForm } from "@formanywhere/shared/auth/signup";
import { Typography } from "@formanywhere/ui/typography";

const features = [
  "Free forever plan available",
  "No credit card required",
  "Set up in under 2 minutes",
  "100+ beautiful templates",
];
---

<BaseLayout title="Create Account | FormAnywhere">
  <div class="min-h-screen flex bg-surface">
    <!-- Left Side - Branding Panel (Static Astro) -->
    <div
      class="hidden md:flex flex-1 bg-gradient-to-br from-primary to-primary-dark relative overflow-hidden flex-col justify-between p-16"
    >
      <!-- Decorative circles -->
      <div
        class="absolute -top-24 -right-24 w-96 h-96 rounded-full border border-white/10"
      >
      </div>
      <div
        class="absolute -bottom-36 -left-36 w-[500px] h-[500px] rounded-full border border-white/10"
      >
      </div>

      <!-- Logo -->
      <a href="/" class="relative z-10 flex items-center gap-3">
        <div
          class="w-10 h-10 rounded-xl bg-white/20 backdrop-blur-sm flex items-center justify-center"
        >
          <img
            src="/icons/sparkles.svg"
            alt=""
            class="w-5 h-5 invert"
            aria-hidden="true"
          />
        </div>
        <span class="text-white text-lg font-semibold">FormAnywhere</span>
      </a>

      <!-- Marketing Content -->
      <div class="relative z-10 max-w-md">
        <h2 class="text-4xl font-bold text-white mb-4 leading-tight">
          Start building <span class="text-white/80">amazing forms</span> today
        </h2>
        <p class="text-lg text-white/90 mb-10 leading-relaxed">
          Create your free account and join thousands of teams using
          FormAnywhere to collect data smarter.
        </p>

        <div class="flex flex-col gap-5">
          {
            features.map((feature) => (
              <div class="flex items-center gap-4">
                <div class="w-6 h-6 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center flex-shrink-0">
                  <img
                    src="/icons/check.svg"
                    alt=""
                    class="w-3.5 h-3.5 invert"
                    aria-hidden="true"
                  />
                </div>
                <span class="text-white/95 text-base">{feature}</span>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Stats -->
      <div class="relative z-10 flex gap-16">
        <div>
          <div class="text-4xl font-bold text-white mb-1">10K+</div>
          <div class="text-white/80 text-sm">Active Users</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-1">500K+</div>
          <div class="text-white/80 text-sm">Forms Created</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-white mb-1">99.9%</div>
          <div class="text-white/80 text-sm">Uptime</div>
        </div>
      </div>
    </div>

    <!-- Right Side - Sign Up Form (SolidJS Interactive) -->
    <div
      class="flex-1 flex items-center justify-center p-6 sm:p-8 md:p-12 bg-background-default"
    >
      <div class="w-full max-w-[480px]">
        <!-- Mobile Logo -->
        <a href="/" class="md:hidden flex items-center gap-3 mb-8">
          <div
            class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary to-primary-dark flex items-center justify-center shadow-lg"
          >
            <img
              src="/icons/sparkles.svg"
              alt=""
              class="w-5 h-5 invert"
              aria-hidden="true"
            />
          </div>
          <span class="text-on-surface text-lg font-semibold">FormAnywhere</span
          >
        </a>

        <!-- Header -->
        <div class="mb-8">
          <Typography
            variant="headline-large"
            color="on-surface"
            as="h1"
          >
            Create your account
          </Typography>
          <Typography
            variant="body-large"
            color="on-surface-variant"
            class="mt-2"
          >
            Start building beautiful forms in minutes
          </Typography>
        </div>

        <!-- SolidJS Form Component - Hydrates on load -->
        <SignUpForm client:load />
      </div>
    </div>
  </div>
</BaseLayout>
