---
/**
 * Demo Teaser Section - Using @formanywhere/ui components
 * Video preview section with Card and Chip components
 * Note: Stack/Box are not used directly here; static HTML layout avoids extra hydration cost.
 */
import { Card } from "@formanywhere/ui/card";
import { Chip } from "@formanywhere/ui/chip";
import { Typography } from "@formanywhere/ui/typography";
---

<section class="bg-background-default py-16" aria-labelledby="demo-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Glass Card with prop-driven layout -->
    <Card
      variant="glass"
      padding="xl"
      gap="lg"
      align="center"
      justify="between"
      class="flex flex-col md:flex-row"
    >
      <!-- Left Content -->
      <div class="flex-1 flex flex-col gap-4">
        <!-- Watch Demo Badge -->
        <div class="flex items-center gap-2">
          <svg
            class="w-4 h-4 text-primary"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"
            ></path>
            <path fill-rule="evenodd" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
          <Chip
            variant="label"
            label="WATCH DEMO"
            style={{
              background: "var(--m3-color-secondary-container)",
              color: "var(--m3-color-on-secondary-container)",
              border: "none",
            }}
          />
        </div>

        <!-- Title -->
        <Typography
          variant="headline-large"
          color="on-surface"
          align="left"
          as="h3"
        >
          See FormAnywhere in Action
        </Typography>

        <!-- Description -->
        <Typography
          variant="body-large"
          color="on-surface-variant"
          align="left"
          class="max-w-xl"
        >
          Watch how you can build a complete multi-step form with AI assistance
          in under 60 seconds
        </Typography>

        <!-- Features list -->
        <div class="flex flex-wrap gap-6">
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-success"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm font-medium text-on-surface-variant">
              No signup required
            </span>
          </div>
          <div class="flex items-center gap-2">
            <svg
              class="w-5 h-5 text-tertiary"
              fill="none"
              stroke="currentColor"
              stroke-width="2.5"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-sm font-medium text-on-surface-variant">
              60 seconds
            </span>
          </div>
        </div>
      </div>

      <!-- Right Demo Preview -->
      <Card
        variant="glass-subtle"
        class="relative w-full md:w-[400px] h-48 md:h-60"
      >
        <div
          class="w-full h-full bg-gradient-to-br from-primary/5 to-primary/10 flex items-center justify-center relative"
        >
          <!-- Form Preview in Background -->
          <div class="absolute inset-4 bg-surface/80 rounded-lg p-4 opacity-50">
            <div class="flex flex-col gap-3">
              <div class="h-2 bg-surface-container-high rounded w-3/5"></div>
              <div
                class="h-6 bg-surface-container-low rounded border border-outline-variant"
              >
              </div>
              <div class="h-2 bg-surface-container-high rounded w-1/2"></div>
              <div
                class="h-6 bg-surface-container-low rounded border border-outline-variant"
              >
              </div>
              <div class="h-2 bg-surface-container-high rounded w-2/3"></div>
              <div
                class="h-6 bg-surface-container-low rounded border border-outline-variant"
              >
              </div>
            </div>
          </div>

          <!-- Play Button -->
          <div
            class="relative z-10 w-16 h-16 rounded-full flex items-center justify-center shadow-xl transition-all duration-300 group-hover:scale-110"
            style="background: rgba(255, 255, 255, 0.7); backdrop-filter: blur(40px); border: 1px solid rgba(255, 255, 255, 0.6);"
          >
            <svg
              class="w-8 h-8 text-primary"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"></path>
            </svg>
          </div>
        </div>

        <!-- Duration Badge -->
        <div
          class="absolute bottom-3 right-3 bg-on-surface/80 text-background-paper px-3 py-1 rounded-full text-xs font-bold backdrop-blur-sm"
        >
          0:60
        </div>
      </Card>
    </Card>
  </div>
</section>
