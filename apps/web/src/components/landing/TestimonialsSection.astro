---
/**
 * Testimonials Section - Real Use Cases
 * Authentic quotes focused on offline-first scenarios
 */
import { Card } from "@formanywhere/ui/card";
import { Typography } from "@formanywhere/ui/typography";
import { Chip } from "@formanywhere/ui/chip";
import { Avatar } from "@formanywhere/ui/avatar";

const testimonials = [
  {
    quote:
      "Our building inspectors used to lose data in basements with no signal. Now they capture photos, GPS, and signatures completely offline. It just works.",
    author: "Field Operations Manager",
    useCase: "Building Inspections",
    rating: 5,
    colorVar: "var(--m3-color-primary)",
  },
  {
    quote:
      "Conference WiFi always crashes during check-in. FormAnywhere let us process 500+ attendees without a single lost registration, even when the network dropped.",
    author: "Event Coordinator",
    useCase: "Event Check-In",
    rating: 5,
    colorVar: "var(--m3-color-secondary)",
  },
  {
    quote:
      "Patient intake forms need to work in rural clinics with spotty internet. The local-first approach means we never lose critical health data.",
    author: "Healthcare Administrator",
    useCase: "Patient Intake",
    rating: 5,
    colorVar: "var(--m3-color-tertiary)",
  },
];
---

<section
  class="section bg-background-paper"
  aria-labelledby="testimonials-heading"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <Chip
        variant="label"
        label="USE CASES"
        style={{
          "margin-bottom": "1rem",
          background: "var(--m3-color-secondary-container)",
          color: "var(--m3-color-on-secondary-container)",
          border: "none",
        }}
      />
      <Typography
        variant="headline-large"
        color="on-surface"
        align="center"
        as="h2"
        class="mb-4"
      >
        Built for Real-World Conditions
      </Typography>
      <Typography
        variant="body-large"
        color="on-surface-variant"
        align="center"
      >
        Where reliable internet isn't guaranteed
      </Typography>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        testimonials.map((testimonial) => (
          <Card
            variant="elevated"
            style={{ padding: "32px" }}
            class="hover:-translate-y-2 hover:shadow-card transition-all duration-300"
          >
            {/* Use Case Badge */}
            <div class="flex items-center gap-2 mb-6">
              <span class="px-3 py-1 rounded-full bg-primary/10 text-on-surface text-xs font-bold">
                {testimonial.useCase}
              </span>
            </div>

            {/* Quote */}
            <Typography
              variant="body-large"
              color="on-surface"
              class="mb-8"
              style={{ "line-height": "1.6" }}
            >
              "{testimonial.quote}"
            </Typography>

            {/* Author */}
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-surface-container-high flex items-center justify-center">
                <svg
                  class="w-5 h-5 text-on-surface-variant"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </div>
              <div>
                <Typography variant="title-small" color="on-surface" as="span">
                  {testimonial.author}
                </Typography>
                <Typography variant="body-small" color="on-surface-variant">
                  FormAnywhere User
                </Typography>
              </div>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</section>
