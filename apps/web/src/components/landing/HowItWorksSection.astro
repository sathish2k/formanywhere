---
/**
 * How It Works Section - Using @formanywhere/ui components
 * 3-step process with highlighted middle card
 */
import { Card } from "@formanywhere/ui/card";
import { Typography } from "@formanywhere/ui/typography";
import { Chip } from "@formanywhere/ui/chip";

const steps = [
  {
    number: "01",
    title: "Design Your Form",
    description:
      "Use our AI assistant or drag-and-drop builder to create your perfect form. Choose from templates or start from scratch.",
    items: ["AI-powered generation", "Pre-built templates", "Custom branding"],
    icon: "/icons/palette.svg",
  },
  {
    number: "02",
    title: "Configure & Customize",
    description:
      "Add logic, validations, integrations, and styling. Set up multi-step workflows with conditional branching.",
    items: [
      "Conditional logic",
      "Field validations",
      "Third-party integrations",
    ],
    icon: "/icons/settings.svg",
    highlighted: true,
  },
  {
    number: "03",
    title: "Deploy & Collect",
    description:
      "Share via link, embed on your website, or integrate with your app. Start collecting responses immediately.",
    items: [
      "Multiple deployment options",
      "Real-time responses",
      "Automated workflows",
    ],
    icon: "/icons/rocket.svg",
  },
];
---

<section
  class="section bg-background-neutral"
  aria-labelledby="howitworks-heading"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <Chip
        variant="label"
        label="HOW IT WORKS"
        style={{
          "margin-bottom": "1rem",
          background: "var(--m3-color-secondary-container)",
          color: "var(--m3-color-on-secondary-container)",
          border: "none",
        }}
      />
      <Typography
        variant="headline-large"
        color="on-surface"
        align="center"
        as="h2"
        class="mb-4"
      >
        Get Started in 3 Simple Steps
      </Typography>
      <Typography
        variant="body-large"
        color="on-surface-variant"
        align="center"
      >
        From idea to deployed form in minutes
      </Typography>
    </div>

    <!-- Steps Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        steps.map((step, i) => (
          <Card
            variant={step.highlighted ? "elevated" : "glass"}
            class="hover:-translate-y-2 transition-all duration-300"
            style={{
              padding: "40px",
              ...(step.highlighted
                ? {
                    background:
                      "linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%)",
                    "box-shadow":
                      "0 20px 60px color-mix(in srgb, var(--m3-color-primary) 40%, transparent)",
                  }
                : {}),
            }}
          >
            <div
              class={`text-6xl font-extrabold mb-4 ${step.highlighted ? "text-white/40" : "text-text-disabled"}`}
            >
              {step.number}
            </div>

            <div
              class={`w-12 h-12 rounded-xl flex items-center justify-center mb-6 transition-colors duration-300 ${
                step.highlighted
                  ? "bg-white/20 text-white"
                  : i === 0
                    ? "bg-primary/10 text-primary"
                    : i === 2
                      ? "bg-tertiary/10 text-tertiary"
                      : "bg-surface-variant/10 text-on-surface"
              }`}
            >
              {i === 0 && (
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
                  />
                </svg>
              )}
              {i === 1 && (
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
                  />
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                  />
                </svg>
              )}
              {i === 2 && (
                <svg
                  class="w-6 h-6"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"
                  />
                </svg>
              )}
            </div>

            <Typography
              variant="title-large"
              align="left"
              class="mb-4"
              style={{
                color: step.highlighted
                  ? "var(--m3-color-on-primary)"
                  : "var(--m3-color-on-surface)",
              }}
            >
              {step.title}
            </Typography>

            <Typography
              variant="body-medium"
              align="left"
              class="mb-6"
              style={{
                color: step.highlighted
                  ? "var(--m3-color-on-primary)"
                  : "var(--m3-color-on-surface-variant)",
                "line-height": "1.6",
              }}
            >
              {step.description}
            </Typography>

            <ul class="space-y-3">
              {step.items.map((item) => (
                <li class="flex items-center gap-2">
                  <svg
                    class={`w-5 h-5 flex-shrink-0 ${step.highlighted ? "text-white" : "text-primary"}`}
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <Typography
                    variant="body-medium"
                    style={{
                      color: step.highlighted
                        ? "var(--m3-color-on-primary)"
                        : "var(--m3-color-on-surface-variant)",
                      "font-weight": "500",
                    }}
                  >
                    {item}
                  </Typography>
                </li>
              ))}
            </ul>
          </Card>
        ))
      }
    </div>
  </div>
</section>
