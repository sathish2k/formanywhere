---
/**
 * CTA Section - Authentic Call to Action
 * Focus on value proposition without inflated claims
 * Uses icons from public folder for performance
 */
import { Button } from "@formanywhere/ui/button";
import { Typography } from "@formanywhere/ui/typography";
---

<section class="relative py-20 overflow-hidden" aria-labelledby="cta-heading">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary to-primary-dark">
  </div>
  <!-- Glass overlay for depth -->
  <div class="absolute inset-0 lg-glass-subtle opacity-30"></div>

  <div class="relative max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <Typography
      variant="headline-large"
      as="h2"
      align="center"
      class="mb-4"
      style={{ color: "var(--m3-color-on-primary)" }}
    >
      Ready to Collect Data Anywhere?
    </Typography>
    <Typography
      variant="body-large"
      align="center"
      class="mb-10"
      style={{ color: "var(--m3-color-on-primary)" }}
    >
      Start building forms that work offline. No credit card required.
    </Typography>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <!-- Primary CTA: White background, bold, stands out on gradient -->
      <Button
        href="/signup"
        variant="tonal"
        size="lg"
        style={{
          background: "var(--m3-color-surface)",
          color: "var(--m3-color-primary)",
          "font-weight": "700",
          "box-shadow": "0 8px 24px rgba(0, 0, 0, 0.15)",
        }}
      >
        Get Started Free
        <img
          src="/icons/arrow-right.svg"
          alt=""
          class="w-5 h-5"
          style={{ filter: "none" }}
          loading="lazy"
          decoding="async"
        />
      </Button>
      <!-- Secondary CTA: Outlined for lower emphasis -->
      <Button
        href="#demo"
        variant="outlined"
        size="lg"
        style={{
          "border-color":
            "color-mix(in srgb, var(--m3-color-on-primary) 50%, transparent)",
          color: "var(--m3-color-on-primary)",
          background:
            "color-mix(in srgb, var(--m3-color-on-primary) 10%, transparent)",
        }}
      >
        <img
          src="/icons/play-circle.svg"
          alt=""
          class="w-5 h-5"
          style={{ filter: "brightness(0) invert(1)" }}
          loading="lazy"
          decoding="async"
        />
        Watch Demo
      </Button>
    </div>
  </div>
</section>
