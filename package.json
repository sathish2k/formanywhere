{
  "name": "formanywhere",
  "version": "0.0.1",
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "bun@1.2.20",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "storybook": "bun --filter @formanywhere/ui run storybook",
    "storybook:build": "bun --filter @formanywhere/ui run storybook:build",
    "run:storybook": "bun --filter @formanywhere/ui run run:storybook",
    "build:storybook": "bun --filter @formanywhere/ui run build:storybook",
    "dev:web": "turbo dev --filter=@formanywhere/web",
    "dev:api": "bun --filter=@formanywhere/api run dev",
    "dev:desktop": "turbo dev --filter=@formanywhere/desktop",
    "build:web": "turbo build --filter=@formanywhere/web",
    "build:desktop": "turbo build --filter=@formanywhere/desktop"
  },
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/features/*",
    "backend/*"
  ]
}