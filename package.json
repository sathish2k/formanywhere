{
  "name": "formanywhere",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "dev:web": "turbo dev --filter=@formanywhere/web",
    "dev:desktop": "turbo dev --filter=@formanywhere/desktop",
    "build:web": "turbo build --filter=@formanywhere/web",
    "build:desktop": "turbo build --filter=@formanywhere/desktop"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@thisbeyond/solid-dnd": "0.7.5"
  }
}