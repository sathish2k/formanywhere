# ─── FormAnywhere API Environment Variables ──────────────────────────────────
# Copy this file to .env and fill in the values.
# ──────────────────────────────────────────────────────────────────────────────

# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=postgres://postgres:postgres@localhost:5432/formanywhere

# ─── Better Auth ─────────────────────────────────────────────────────────────
# Secret key for signing sessions (MUST change in production)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=formanywhere-dev-secret-change-in-production

# Base URL of the backend API server
BETTER_AUTH_URL=http://localhost:3001

# ─── Frontend ────────────────────────────────────────────────────────────────
# URL of the Astro frontend (used for CORS and redirects)
FRONTEND_URL=http://localhost:4321

# ─── Google OAuth ────────────────────────────────────────────────────────────
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ─── GitHub OAuth ────────────────────────────────────────────────────────────
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ─── Server ──────────────────────────────────────────────────────────────────
PORT=3001
NODE_ENV=development

# ─── AI Provider ─────────────────────────────────────────────────────────────
# "gemini" (default) or "openrouter"
AI_PROVIDER=gemini

# Model overrides (optional)
# AI_MODEL_FAST=gemini-2.5-flash
# AI_MODEL_PRO=gemini-2.5-pro

# Gemini (default provider)
GEMINI_API_KEY=

# xAI / Grok (used for blog research agent)
XAI_API_KEY=

# OpenRouter (required when AI_PROVIDER=openrouter)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
