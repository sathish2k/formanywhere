{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "."
    },
    "include": [
        "form/**/*.ts",
        "submission/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}